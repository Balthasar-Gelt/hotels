{% extends 'base.html.twig' %}

{% block title %}Hotel List
{% endblock %}

{% block body %}
	<div class="container py-5">
		<h1 class="text-center mb-4">Our Hotels</h1>
		<div class="row">
			{% for hotel in hotels %}
				<div class="col-md-6 mb-4">
					<div class="card card-hover h-100">
						<img src="{{ asset('images/' ~ hotel.image) }}" class="card-img-top" alt="{{ hotel.name }}">
						<div class="card-body">
							<h5 class="card-title">{{ hotel.name }}</h5>
							<p class="card-text">{{ hotel.description | slice(0, 100) ~ '...' }}</p>
							<ul class="list-unstyled">
								<li>
									<strong>Location:</strong>
									{{ hotel.location }}</li>
								<li>
									<strong>Rating:</strong>
									{{ hotel.rating }}
									/ 5</li>
								<li>
									<strong>Price:</strong>
									${{ hotel.formattedPricePerNight }}
									per night</li>
							</ul>
							<a href="{{ path('hotel_show', { 'id': hotel.id }) }}" class="btn btn-primary">View Details</a>
						</div>
					</div>
				</div>
			{% else %}
				<div class="col-12">
					<p class="text-center">No hotels available at the moment.</p>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
