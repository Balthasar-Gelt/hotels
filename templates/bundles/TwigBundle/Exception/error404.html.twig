{% extends 'base.html.twig' %}

{% block title %}Page Not Found
{% endblock %}

{% block body %}
	<div class="error-container text-center py-5">
		<h1 class="display-1 text-danger">404</h1>
		<p class="lead">Oops! The page you're looking for doesn't exist.</p>

		<div class="error-image-container">
			<img src="{{ asset('images/404-img.jpg') }}" alt="Lonely Island with Hotel" class="img-fluid">
		</div>

		<p>You may want to return to the
			<a href="{{ path('homepage') }}" class="btn btn-primary">Homepage</a>
			or explore other parts of the site.</p>
	</div>
{% endblock %}
